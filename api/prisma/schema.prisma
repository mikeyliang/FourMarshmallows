generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dm_College {
  id String @id @default(uuid()) @db.Uuid
  name String @unique
  city String 
  state String
  user User[]
  trail Trail[]

}

model Trail {
  id String @id @default(uuid()) @db.Uuid
  name String @unique
  trailposition TrailPosition[]
  collegeid String @db.Uuid
  college dm_College @relation(fields: [collegeid], references: [id])
  image String?
}

model TrailPosition {
  id String @id @default(uuid()) @db.Uuid
  position Int
  longitude Float
  latitude Float
  elevation Float
  trailid String @db.Uuid
  trail Trail @relation(fields: [trailid], references: [id])

}

model User {
  id String @id @default(uuid()) @db.Uuid
  name String @unique
  email String @unique
  collegeid String @db.Uuid
  college dm_College @relation(fields: [collegeid], references: [id])
  challenges Challenge[] 
}

model Challenge {
  id String @id @default(uuid()) @db.Uuid
  dm_challengeid String
  userid String @db.Uuid
  user User @relation(fields: [userid], references: [id])
  createdAt DateTime @default(now()) @db.Timestamptz(6)
}

model dm_Challenge {
  id String @id @default(uuid()) @db.Uuid
  challengename String @unique
  description String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  collegeId String @db.Uuid
}





